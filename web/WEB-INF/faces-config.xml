<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">    
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.customeraccount.presentation.bundle.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <!--<navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addCustomer</from-outcome>
            <to-view-id>addCustomer.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>-->
    <navigation-rule>
        <from-view-id>createCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerCreateBean.save}</from-action>
            <from-outcome>validate</from-outcome>
            <to-view-id>createCustomerOk.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>customersBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.beans.CustomersBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.beans.CustomerCreateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerDetailsBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.beans.CustomerDetailsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>accountDetailsBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.beans.AccountDetailsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>